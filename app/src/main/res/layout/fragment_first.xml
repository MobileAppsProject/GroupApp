<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_first_red"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="@string/first_redbutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button_first_green"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="@string/first_greenbutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_first_red" />

        <Button
            android:id="@+id/button_first_blue"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="@string/first_bluebutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_first_green" />

        <Button
            android:id="@+id/button_UWpurple"
            style="@android:style/Widget.DeviceDefault.Button.Toggle"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="@string/first_UWpurple"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_first_blue" />

        <Button
            android:id="@+id/button_UWgold"
            style="@android:style/Widget.Button.Inset"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:text="@string/first_UWgold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_UWpurple" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>